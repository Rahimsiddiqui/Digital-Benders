<%- layout(`boilerplate/boilerplate`) %>

<!-- CSS -->
<link rel="stylesheet" href="/stylesheet/contact/contact.css" />

<div class="contact-container">
  <header id="contact-header">
    <div class="column-1">
      <h2 class="contact__title">
        Discuss your project with <span>industry experts</span>
      </h2>
      <div class="contact__description">
        We deliver comprehensive and results-driven digital marketing solutions
        tailored to your business. Reach new heights of online success with our
        expertise and innovation.
      </div>
      <div class="contact__details">
        <% data.contactDetails.forEach(contactDetail => { %>
        <div class="contact-detail">
          <span
            ><img
              src="<%= contactDetail.src %>.svg"
              alt="<%= contactDetail.alt %> Image"
          /></span>
          <%= contactDetail.text %>
        </div>
        <% }); %>
      </div>
    </div>

    <div class="column-2">
      <form class="contact__form">
        <h3 class="form__title">Let's Get In Touch!</h3>
        <p class="form__description">
          Letâ€™s discuss your project and find out what we can do to provide
          value.
        </p>
        <div class="form__inputs">
          <% data.formInputs.forEach(formInput => { %>
          <input
            type="<%= formInput.type %>"
            class="form__input <%= formInput.specialClass ? 'customNumberInput' : '' %>"
            placeholder="<%= formInput.placeholder %>"
            required
          />
          <% }); %>
        </div>

        <div id="spinner-overlay" class="overlay" style="z-index: 9999">
          <div
            class="spinner-border spinner company-contact-spinner text-white spinner-border-md"
            role="status"
          ></div>
        </div>

        <button class="submit__form" type="submit">Submit</button>
      </form>
    </div>
  </header>
</div>

<div class="all-faqs"><%- include('../misc/faqs.ejs') %></div>

<!-- JS -->
<script src="/javascript/contact/contact.js"></script>
